<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_srl"
    tools:context="com.test.banner.banner.BannerDataActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.geek.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:banner_auto_play="true"
                app:banner_default_image="@drawable/banner_default"
                app:banner_interval_time="5000"
                app:banner_scroll_time="1000"
                app:banner_show_indicator="true"
                app:banner_show_model="Single"
                app:banner_single_anim="Accordion"
                app:layout_scrollFlags="scroll">

                <TextView
                    android:id="@+id/pager_tv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_indicator_bg"
                    android:gravity="center"
                    android:text="0/0"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </com.geek.banner.Banner>

            <com.geek.banner.Banner
                android:id="@+id/banner_2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:banner_auto_play="true"
                app:banner_default_image="@drawable/banner_default"
                app:banner_expose_width="20dp"
                app:banner_interval_time="5000"
                app:banner_multi_anim="ScaleIn"
                app:banner_page_spacing="14dp"
                app:banner_scroll_time="1000"
                app:banner_show_indicator="true"
                app:banner_show_model="Multi"
                app:layout_scrollFlags="scroll">

                <TextView
                    android:id="@+id/pager_tv_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/shape_indicator_bg"
                    android:gravity="center"
                    android:text="0/0"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </com.geek.banner.Banner>

            <com.geek.banner.Banner
                android:id="@+id/banner_mz"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:banner_auto_play="true"
                app:banner_default_image="@drawable/banner_default"
                app:banner_expose_width="20dp"
                app:banner_interval_time="6000"
                app:banner_mz_anim="ScaleIn"
                app:banner_mz_overlap="@dimen/spacing_14"
                app:banner_scroll_time="1000"
                app:banner_show_indicator="true"
                app:banner_show_model="MZ_EFFECT">

                <TextView
                    android:id="@+id/pager_tv_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_indicator_bg"
                    android:gravity="center"
                    android:text="0/0"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </com.geek.banner.Banner>
        </LinearLayout>
    </ScrollView>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>
